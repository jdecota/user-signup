def validate():
    username = request.form['username']                             #Define placeholders
    password = request.form['password']
    verify_password = request.form['verify_password']
    email = request.form['email']

    username_error = ''                                             #Create variables to hold error messages 
    password_error = ''
    verify_pass_error = ''
    email_error = ''


    # if username.count('') > 0                                          
       # username_error = 'No spaces are allowed in the username.'
        #username = ''
    if len(username) > 20:
        username_error = 'Maximum number of characters allowed is 20.'
        username = ''
    if len(username) < 3:
        username_error = "A minimum of 3 characters is required."
        username = ''
    if  len(username) < 1:                                                            #didn't work- len(username) = 0:
        username_error = "Username is required."
        username = '' 
    else:
        username = {{username}}  

    # if password.count('') > 0                                          
       # password_error = 'No spaces are allowed in the username.'
        #password = ''
    if len(password) > 20:
        password_error = 'Passwords cannot exceed 20 characters.'
        password = ''
    if len(password) < 3:
        password_error = "Password must have a minimum of 3 characters."
        password = ''
    if len(password) < 1:                                                    #or could I use username = ''
        password_error = "Password Required."
        password = ''
    else:
        password = {{password}}                                                        #not needed?
                                                                         #OR return "valid username"?

    if verify_password != password:                                         
        verify_pass_error = "Passwords do not match."                       #TODO Error if password, password-confirmation do not match
        verify_pass = ''
    if len(verify_password) < 1:                                            #TODO Password Verification is REQUIRED
        verify_pass_error = "password verification is required"
        verify_pass = ''
    else:
        verify_password = {{verify_password}}                                   #OR return "valid username"?

    #if  email.find(' ') > 0                                          
    #    email_error = 'No spaces are allowed in email.'
    #    email = ''    
    if  email.count('@') > 1:                                          #Look Up     #TODO Email can only have 1 @
        email_error = 'Invalid Email'
        email = '' 
    if  email.count('.') > 1:                                          #Look UP     #TODO Email can only have 1 .
        email_error - 'Invalid Email'
        email = '' 
    if  len(email) > 20:                                                         #TODO Email must be between 3-20 char    
        email_error = 'Maximum number of characters is 20'
        email = '' 
    if  len(email) < 3:
        email_error = "A minimum of 3 characters is required"    
        email = '' 
    else: 
        email = {{email}}
                            
    if not username_error and not password_error and not verify_pass_error and not email_error:
        return render_template('/welcome?username={username}')                                                      # UNSURE                                        
    else:
        return render_template('form.html', username_error=username_error, 
        password_error=password_error, 
        verify_pass_error=verify_pass_error,
        email_error=email_error,
        username=username,
        password=password,
        verify_password=verify_password,
        email=email)